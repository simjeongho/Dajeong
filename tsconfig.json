{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ESNext",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "."
  },
  "exclude": ["**/*.spec.ts"]
}
